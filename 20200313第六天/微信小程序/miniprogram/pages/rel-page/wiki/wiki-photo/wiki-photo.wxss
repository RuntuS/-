 /*每个相册的外侧盒子 */

.wiki-photo{
  background-color: rgba(233, 233, 233, 0.7);
  width: 90%;
  margin: 0 auto;
  border-radius: 30rpx;
  box-shadow: 4px 4px 5px 3px rgb(200, 200, 200)
}

.block-box{
  width: 600rpx;
  margin: 100rpx auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.image-box{
  width: 100%;
}

.image-box > image{
  width: 100%;
  height: 600rpx
  
}

.delete-box > button{
  background-color: rgb(200, 200, 200);
  width: 50%;
}




.font{
  display: flex;
  align-content: center;
  justify-content: center;
  height: 100rpx;
  font-size : 20px;
  font-weight: 500;
}

.add-photo{
  position: fixed;
  top: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: rgba(189, 189, 189, 0.5);
  border-radius: 10rpx;
}